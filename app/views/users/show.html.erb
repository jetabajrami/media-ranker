<main>
 <h2>User Summary: <a><%=@user.name%></a></h2>
 <p>Joined site: <a><%=@user.created_at.strftime("%m/%d/%Y")%></a></p>

  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
      <%@user.votes.each do |vote|%>
           <tr>
          <td><%= link_to Work.find_by(id: vote.work_id).title, work_path(vote.work_id) %></td>
          <td><%= Work.find_by(id: vote.work_id).creator%></td>
          <td><%= Work.find_by(id: vote.work_id).publication_year %></td>
          <td><%= Work.find_by(id: vote.work_id).category %></td>
          <td><%= vote.created_at.strftime("%m/%d/%Y") %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </section>

  <a class="btn btn-secondary" href="/users">See all Users</a>
  <a class="btn btn-primary" href="/">Back to Media List</a>
</main>
