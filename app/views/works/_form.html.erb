<%= form_with model: @work do |f|%>
<p>Please provide the following information:</p>
  <div>
    <%= f.label :category%>
    <%= f.select(:category, ["album", "book", "movie"])%>
  </div>
  <div>
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
  <div>
    <%= f.label :creator%>
    <%= f.text_field :creator%>
  </div>
   <div>
    <%= f.label :publication_year%>
    <%= f.text_field :publication_year%>
  </div>
   <div>
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>
  <%= f.submit "#{action_name} Work", class:"show-btn" %>
<% end %>