<main>
  <section>
    <h2><%=@work.title%></h2>
    <p>Created by: <%=@work.creator%></p>
    <p>Published: <%=@work.publication_year%></p>
    <p><%=@work.description%></p>
    <section>
      <a class="btn btn-primary" href="/">Back to media ranks</a>
      <a class="btn btn-primary"<%= link_to "Edit", edit_work_path(@work.id)%> 
      <a class="btn btn-primary" <%= link_to "Upvote", upvote_path(@work.id) %> 
      <a class="btn btn-danger" <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure you want to delete work: #{@work.title}?"}%>
    </section>
 </section>
   <br>
  <section class="works-votes__container">
    <h3 class="works-votes__header"><%=@work.votes.count%> Votes for this <%=@work.category%></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
      <%@work.votes.each do |vote|%>
        <tr>
          <td><%= link_to User.find_by(id: vote.user_id).name, user_path(vote.user_id) %></td>
          <td><%= vote.created_at.strftime("%m/%d/%Y")%></td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </section>
</main>