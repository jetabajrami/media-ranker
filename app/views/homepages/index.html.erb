<main>
  <section class="spotlight">
    <section>
      <%spotlight = Work.work_with_max_vote%>
      <h2 class="spotlight__header">
        <span class="spotlight__header--prefix">Media Spotlight</span> 
        <a class="spotlight__link-to"> <%=link_to spotlight.title,  work_path(spotlight.id)%></a> by <%=spotlight.creator%>
      </h2>
      <p class="spotlight__description">
        <%=spotlight.description%>
      </p>
   </section>

    <hr class="root__hr" />

    <section class="top-ten__container">

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">
          Top Albums
        </h2>
        <%Work.top_ten("album").each do |work|%>
        <ul class="list-group top-ten__list">
            <li class="list-group-item">
              <h4>
                <a><%= link_to work.title, work_path(work.id) %></a>
                <small class="top-ten__creator">by <%=work.creator%></small>
              </h4>
              <%if Work.count_vote(work.id) > 1 %>
              <p><%=Work.count_vote(work.id)%> votes</p>
              <%else%>
              <p><%=Work.count_vote(work.id)%> vote</p>
              <%end%>
            </li>
        </ul>
        <%end%>
      </section>

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">
          Top Books
        </h2>
        <%Work.top_ten("book").each do |work|%>
        <ul class="list-group top-ten__list">
            <li class="list-group-item">
              <h4>
                <a><%= link_to work.title, work_path(work.id) %></a>
                <small class="top-ten__creator">by <%=work.creator%></small>
              </h4>
              <%if Work.count_vote(work.id) > 1 %>
              <p><%=Work.count_vote(work.id)%> votes</p>
              <%else%>
              <p><%=Work.count_vote(work.id)%> vote</p>
              <%end%>
            </li>
        </ul>
        <%end%>
      </section>

      <section class="top-ten__list-container">
        <h2 class="top-ten__header">
          Top Movies
        </h2>
        <%Work.top_ten("movie").each do |work|%>
        <ul class="list-group top-ten__list">
            <li class="list-group-item">
              <h4>
                <a><%= link_to work.title, work_path(work.id) %></a>
                <small class="top-ten__creator">by <%=work.creator%></small>
              </h4>
              <%if Work.count_vote(work.id) > 1 %>
              <p><%=Work.count_vote(work.id)%> votes</p>
              <%else%>
              <p><%=Work.count_vote(work.id)%> vote</p>
              <%end%>
            </li>
        </ul>
        <%end%>`
      </section>
    
    </section>
  </section>
</main>






